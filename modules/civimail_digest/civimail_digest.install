      'timestamp' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ],
    ],
    'primary key' => ['id'],
    'indexes' => [
      'digest_id' => ['digest_id'],
    ],
  ];
  $schema['civimail_digest__group'] = [
    'description' => 'Logs history of groups that were the subject of a digest mailing.',
